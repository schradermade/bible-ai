generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SavedAiResponse {
  id        String   @id @default(cuid())
  userId    String
  feature   String
  reference String?
  prompt    String?
  response  String
  createdAt DateTime @default(now())
}

model UserSubscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  stripeCustomerId     String?  @unique
  stripeSubscriptionId String?  @unique
  status               String
  priceId              String?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model UsageCounter {
  id          String   @id @default(cuid())
  userId      String
  feature     String
  periodStart DateTime
  count       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, feature, periodStart])
  @@index([userId, feature])
}

model SavedVerse {
  id        String   @id @default(cuid())
  userId    String
  reference String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, reference])
  @@index([userId])
}

model MemorizedVerse {
  id          String    @id @default(cuid())
  userId      String
  reference   String
  text        String?
  memorizedAt DateTime? // Nullable - only set when user marks as memorized
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, reference])
  @@index([userId])
  @@index([memorizedAt])
}

model PrayerRequest {
  id              String    @id @default(cuid())
  userId          String
  title           String?   // 1-2 word summary of the prayer
  content         String    // The prayer text
  source          String    // "verse", "chat", or "manual"
  sourceReference String?   // Verse reference if source is "verse"
  status          String    @default("ongoing") // "ongoing" or "answered"
  answeredAt      DateTime? // When marked as answered
  deletedAt       DateTime? // When soft deleted (preserves answered prayers for reports)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([deletedAt])
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String?   // Auto-generate: "Conversation about Forgiveness"
  summary   String?   @db.Text // Compressed history for older messages
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  messages Message[]

  @@index([userId, createdAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // "user" or "assistant"
  content        String       @db.Text
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}
