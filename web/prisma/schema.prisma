generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SavedAiResponse {
  id        String   @id @default(cuid())
  userId    String
  feature   String
  reference String?
  prompt    String?
  response  String
  createdAt DateTime @default(now())
}

model UserSubscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  stripeCustomerId     String?  @unique
  stripeSubscriptionId String?  @unique
  status               String
  priceId              String?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model UsageCounter {
  id          String   @id @default(cuid())
  userId      String
  feature     String
  periodStart DateTime
  count       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, feature, periodStart])
  @@index([userId, feature])
}

model SavedVerse {
  id        String   @id @default(cuid())
  userId    String
  reference String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, reference])
  @@index([userId])
}

model MemorizedVerse {
  id          String    @id @default(cuid())
  userId      String
  reference   String
  text        String?
  memorizedAt DateTime? // Nullable - only set when user marks as memorized
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, reference])
  @@index([userId])
  @@index([memorizedAt])
}

model PrayerRequest {
  id              String    @id @default(cuid())
  userId          String
  title           String?   // 1-2 word summary of the prayer
  content         String    // The prayer text
  source          String    // "verse", "chat", or "manual"
  sourceReference String?   // Verse reference if source is "verse"
  status          String    @default("ongoing") // "ongoing" or "answered"
  answeredAt      DateTime? // When marked as answered
  deletedAt       DateTime? // When soft deleted (preserves answered prayers for reports)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([deletedAt])
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  title     String?   // Auto-generate: "Conversation about Forgiveness"
  summary   String?   @db.Text // Compressed history for older messages
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  messages Message[]

  @@index([userId, createdAt])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String       // "user" or "assistant"
  content        String       @db.Text
  createdAt      DateTime     @default(now())

  @@index([conversationId, createdAt])
}

model StudyPlan {
  id          String    @id @default(cuid())
  userId      String
  title       String    // "7-Day Journey: Understanding Grace"
  description String?   @db.Text
  duration    Int       // 7 or 21 days
  source      String    // "ai_personalized", "template_grace", etc.
  status      String    @default("active") // "active", "completed", "archived"
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  deletedAt   DateTime? // Soft delete
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  days       StudyPlanDay[]
  memberPlan MemberStudyPlan?

  @@index([userId, status])
  @@index([userId, createdAt])
}

model StudyPlanDay {
  id              String    @id @default(cuid())
  studyPlanId     String
  studyPlan       StudyPlan @relation(fields: [studyPlanId], references: [id], onDelete: Cascade)
  dayNumber       Int       // 1-7 or 1-21
  title           String
  content         String    @db.Text // Rich reflection
  reflection      String    @db.Text // Questions
  prayer          String?   @db.Text // Prayer for the day
  verseReference  String?
  verseText       String?   @db.Text
  completed       Boolean   @default(false)
  completedAt     DateTime?

  // Engagement tracking for gamification
  verseSaved      Boolean   @default(false)
  prayerGenerated Boolean   @default(false)
  chatEngaged     Boolean   @default(false)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([studyPlanId, dayNumber])
  @@index([studyPlanId, dayNumber])
}

model StudyStreak {
  id              String    @id @default(cuid())
  userId          String    @unique
  currentStreak   Int       @default(0)
  longestStreak   Int       @default(0)
  lastCompletedAt DateTime?

  // Gamification stats
  totalPlansCompleted   Int      @default(0)
  total7DayCompleted    Int      @default(0)
  total21DayCompleted   Int      @default(0)
  totalDaysStudied      Int      @default(0)
  totalVersesFromPlans  Int      @default(0)
  totalPrayersFromPlans Int      @default(0)
  unlockedAchievements  String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// Study Circles Models

model StudyCircle {
  id          String   @id @default(cuid())
  name        String
  description String?  @db.Text
  createdBy   String
  maxMembers  Int      @default(8)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     StudyCircleMember[]
  plans       CircleStudyPlan[]
  invitations CircleInvitation[]
  prayers     CirclePrayerRequest[]
  verses      CircleSharedVerse[]

  @@index([createdBy])
}

model StudyCircleMember {
  id        String      @id @default(cuid())
  circleId  String
  circle    StudyCircle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  userId    String
  role      String      @default("member") // "owner", "admin", "member"
  joinedAt  DateTime    @default(now())

  // Granular privacy settings
  shareProgress    Boolean @default(true) // Share which days completed
  shareReflections Boolean @default(false) // Share personal reflections
  shareVerses      Boolean @default(false) // Share saved verses
  sharePrayers     Boolean @default(false) // Share prayer requests

  @@unique([circleId, userId])
  @@index([userId])
  @@index([circleId])
}

model CircleInvitation {
  id           String      @id @default(cuid())
  circleId     String
  circle       StudyCircle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  invitedBy    String
  invitedEmail String?
  token        String      @unique
  status       String      @default("pending") // "pending", "accepted", "declined", "expired"
  expiresAt    DateTime
  acceptedAt   DateTime?
  createdAt    DateTime    @default(now())

  @@index([token])
  @@index([circleId])
}

model CircleStudyPlan {
  id             String      @id @default(cuid())
  circleId       String
  circle         StudyCircle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  templateSource String
  duration       Int
  title          String
  description    String?     @db.Text
  startDate      DateTime
  status         String      @default("active") // "active", "completed"
  createdBy      String
  createdAt      DateTime    @default(now())

  memberPlans MemberStudyPlan[]
  reflections CircleDayReflection[]

  @@index([circleId])
  @@index([status])
}

model MemberStudyPlan {
  id                String          @id @default(cuid())
  circleStudyPlanId String
  circleStudyPlan   CircleStudyPlan @relation(fields: [circleStudyPlanId], references: [id], onDelete: Cascade)
  userId            String
  studyPlanId       String          @unique
  studyPlan         StudyPlan       @relation(fields: [studyPlanId], references: [id], onDelete: Cascade)
  joinedAt          DateTime        @default(now())

  @@unique([circleStudyPlanId, userId])
  @@index([userId])
}

model CircleDayReflection {
  id                String          @id @default(cuid())
  circleStudyPlanId String
  circleStudyPlan   CircleStudyPlan @relation(fields: [circleStudyPlanId], references: [id], onDelete: Cascade)
  dayNumber         Int
  userId            String
  content           String          @db.Text
  verseHighlight    String?         @db.Text
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  reactions CircleReaction[]
  comments  CircleComment[]

  @@index([circleStudyPlanId, dayNumber])
  @@index([userId])
}

model CircleReaction {
  id           String              @id @default(cuid())
  reflectionId String
  reflection   CircleDayReflection @relation(fields: [reflectionId], references: [id], onDelete: Cascade)
  userId       String
  type         String // "amen", "praying", "insightful", "encouraging"
  createdAt    DateTime            @default(now())

  @@unique([reflectionId, userId, type])
  @@index([reflectionId])
}

model CircleComment {
  id           String              @id @default(cuid())
  reflectionId String
  reflection   CircleDayReflection @relation(fields: [reflectionId], references: [id], onDelete: Cascade)
  userId       String
  content      String              @db.Text
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  @@index([reflectionId])
  @@index([userId])
}

model CirclePrayerRequest {
  id              String      @id @default(cuid())
  circleId        String
  circle          StudyCircle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  userId          String
  title           String?
  content         String      @db.Text
  source          String
  sourceReference String?
  dayNumber       Int?
  status          String      @default("ongoing") // "ongoing", "answered"
  answeredAt      DateTime?
  createdAt       DateTime    @default(now())

  prayerSupport CirclePrayerSupport[]

  @@index([circleId])
  @@index([userId])
  @@index([status])
}

model CirclePrayerSupport {
  id        String              @id @default(cuid())
  prayerId  String
  prayer    CirclePrayerRequest @relation(fields: [prayerId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime            @default(now())

  @@unique([prayerId, userId])
  @@index([prayerId])
}

model CircleSharedVerse {
  id            String      @id @default(cuid())
  circleId      String
  circle        StudyCircle @relation(fields: [circleId], references: [id], onDelete: Cascade)
  userId        String
  reference     String
  text          String      @db.Text
  note          String?     @db.Text
  fromDayNumber Int?
  createdAt     DateTime    @default(now())

  reactions CircleVerseReaction[]

  @@index([circleId])
}

model CircleVerseReaction {
  id        String            @id @default(cuid())
  verseId   String
  verse     CircleSharedVerse @relation(fields: [verseId], references: [id], onDelete: Cascade)
  userId    String
  type      String // "amen", "saved", "memorizing"
  createdAt DateTime          @default(now())

  @@unique([verseId, userId, type])
  @@index([verseId])
}
